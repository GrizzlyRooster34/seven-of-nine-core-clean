# Google Cloud Platform Configuration
# Copy this file to .env.gcp and fill in your values
# Source it before deploying: source .env.gcp

# Project Configuration
export GCP_PROJECT_ID="your-project-id"
export GCP_REGION="us-central1"

# Cloud Run Resource Configuration
export MEMORY="2Gi"           # Memory allocation (512Mi, 1Gi, 2Gi, 4Gi, etc.)
export CPU="2"                # CPU allocation (1, 2, 4, etc.)
export MAX_INSTANCES="10"     # Maximum autoscale instances
export MIN_INSTANCES="0"      # Minimum instances (0 = scale to zero)
export TIMEOUT="300s"         # Request timeout

# Application Environment Variables (Optional)
# These will be passed to the Cloud Run service
export NODE_ENV="production"
export LOG_LEVEL="info"

# Database Configuration (if using Cloud SQL)
# export CLOUDSQL_INSTANCE="project:region:instance"
# export DB_HOST="/cloudsql/project:region:instance"
# export DB_USER="seven-user"
# export DB_PASSWORD="your-secure-password"
# export DB_NAME="seven_db"

# Secrets (use Google Secret Manager instead of env vars in production)
# export API_KEY="your-api-key"
# export ENCRYPTION_KEY="your-encryption-key"

# Monitoring and Logging
# export GCP_LOG_LEVEL="INFO"
