{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@systems/*": ["src/systems/*"],
      "@core/*": ["src/systems/core/*"]
    }
  },
  "include": [
    "src/**/*",
    "memory-v2/**/*",
    "memory-v3/**/*",
    "sandbox/**/*",
    "spark/**/*",
    "claude-brain/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/__tests__",
    "src/trace/ghost-diary.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
